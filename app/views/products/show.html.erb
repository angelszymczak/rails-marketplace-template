<h1><%= @product.title %></h1>

<%= image_tag @product.photo if @product.photo.present? %>

<p><%= @product.description %></p>
<p><%= @product.price %></p>

<%= link_to t("products.new.title"), edit_product_path(@product) %>
<%= link_to t("products.destroy.title"), product_path(@product), data: {
  turbo_method: :delete,
  turbo_confirm: t("common.confirm")
} %>
