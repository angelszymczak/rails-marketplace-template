<h1><%= @product.title %></h1>

<%= image_tag @product.photo if @product.photo.present? %>

<p><%= @product.description %></p>
<p><%= @product.price %></p>

<%= link_to 'Editar Producto', edit_product_path(@product) %>
<%= link_to 'Eliminar Producto', product_path(@product), data: {
  turbo_method: :delete,
  turbo_confirm: 'Estas seguro?'
} %>
