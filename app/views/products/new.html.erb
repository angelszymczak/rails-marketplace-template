<!-- esto es lo que va a devolver el endpoint del enlace -->
<!-- y queremos que lo reciba los tags de turbo frame llamados modal -->
<%= turbo_frame_tag 'modal' do %>

  <!-- register the stimulus controller to able use internal methods in its html nodes -->
  <div data-controller="modal">
    <!-- esta es una capa con el fondo de color oscuro para resaltar el formulario nuewvo -->
    <div
      class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40"
      data-action="click->modal#close"
    >
    </div>

    <div
      class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-0"
      data-modal-target="sidebar"
    >
      <!-- close button -->
      <p data-action="click->modal#close">❌</p>

      <h1><%= t(".title") %></h1>

      <%= render partial: 'form', locals: { product: @product, button_text: t("common.create") } %>
    </div>
  </div>
<% end %>

