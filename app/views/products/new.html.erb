<!-- esto es lo que va a devolver el endpoint del enlace -->
<!-- y queremos que lo reciba los tags de turbo frame llamados modal -->
<%= turbo_frame_tag 'modal' do %>
  <div>
    <div class="fixed z-10 w-full h-full top-0 left-0 bg-black bg-opacity-40">
      <!-- lateral sidebar -->
    </div>
    <div class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white overflow-y-scroll shadow flex flex-col ease-in-out duration-300 p-5 translate-x-0">
      <h1>Nuevo Producto</h1>

      <%= render partial: 'form', locals: { product: @product, button_text: 'Create Producto' } %>
    </div>
  </div>
<% end %>

