<h1>Listado de Productos</h1>

<% @products.each do |product| %>
  <%= link_to product_path(product), class: 'product' do %>
    <h2><%= product.title %></h2>
    <span>$ <%= product.price%></span>

    <% if product.photo.present? %>
      <%= image_tag product.photo, width: 100 %>
    <% end %>
  <% end %>
<% end %>

