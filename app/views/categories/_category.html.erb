<div id="<%= dom_id category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1"><%= t("activerecord.models.category") %></strong>
    <%= category.name %>
  </p>

  <%=
    link_to t("common.edit"),
            edit_category_path(category),
            class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
  %>
  <%=
    link_to t("common.destroy"),
            category_path(category),
            turbo_method: :delete,
            turbo_confirm: :delete,
            class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
  %>
</div>
