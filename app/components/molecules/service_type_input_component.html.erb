<div class="sitter-search-form_header">
  <div class="sitter-search-form_header-title">
    <%= label %>
  </div>

  <div class="sitter-search-form_service-type-container">
    <%= render Atoms::RadioInputs::ServiceTypeComponent.new(
      label_icon_url: "sitter_home.svg",
      label_title: "Hospedaje",
      label_title_short: "Hospedaje",
      label_description: "Un cuidador@ hospeda a tus 🐶🐱 en su hogar por el tiempo que necesites.",
      checked: true
    )  %>

    <%= render Atoms::RadioInputs::ServiceTypeComponent.new(
      label_icon_url: "sitter_pets_kinder.svg",
      label_title: "Guardería Diaria",
      label_title_short: "Guardería",
      label_description: "Cuidamos a tus 🐶🐱 por horas, todos los días al mes que necesites según tu rutina.",
      checked: false
    )  %>
  </div>
</div>

<p class="sitter-search-form_label-description--checked--sm">
  <%= "Un cuidador@ hospeda a tus 🐶🐱 en su hogar por el tiempo que necesites." %>
</p>

<p class="sitter-search-form_label-description--no-checked--sm">
  <%= "Cuidamos a tus 🐶🐱 por horas, todos los días al mes que necesites según tu rutina." %>
</p>
